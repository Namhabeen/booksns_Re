<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/imageBookSns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="북스엔스"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/idInput"
        app:layout_constraintStart_toStartOf="@+id/idInput"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idInput"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBookSns" />

    <EditText
        android:id="@+id/pwInput"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/idInput"
        app:layout_constraintStart_toStartOf="@+id/idInput"
        app:layout_constraintTop_toBottomOf="@+id/idInput" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:shadowColor="#3C3F41"
        android:text="로그인"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pwInput"
        app:layout_constraintStart_toStartOf="@+id/pwInput"
        app:layout_constraintTop_toBottomOf="@+id/pwInput" />

    <TextView
        android:id="@+id/forgotGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="패스워드를 잊으셨나요?"
        app:layout_constraintEnd_toEndOf="@+id/loginButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/loginButton"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <Button
        android:id="@+id/signUpFb"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:shadowColor="#472727"
        android:text="FACEBOOK 계정으로 로그인"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pwInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pwInput"
        app:layout_constraintTop_toBottomOf="@+id/pwInput" />

    <TextView
        android:id="@+id/notAccount"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="계정이 아직 없으신가요?"
        app:layout_constraintBottom_toTopOf="@+id/signUpFb"
        app:layout_constraintEnd_toStartOf="@+id/signUpGo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signUpGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="회원가입하기"
        app:layout_constraintBottom_toTopOf="@+id/signUpFb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>